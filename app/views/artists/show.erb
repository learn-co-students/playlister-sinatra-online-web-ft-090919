
<h1><%= @artist.name %></h1>

<h3>By: <a href="/artists/<%= @artist.slug %>"><%= @artist.name %></a></h3>

<h4><u>Songs</u></h4>

<ul>
  <% @artist.songs.each do |song| %>

    <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>

  <% end %>
</ul>

<h4><u>Genres</u></h4>

<% @artist.genres.each do |genre| %>

  <ul>
      <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
  </ul>

<% end %>
