<h1>Create New Song</h1>

<form class="" action="/songs" method="post">


  <label for="Name">Name:</label>
  <input type="text" id="Name" name="song[name]" /><br>

  <label for="artist_name">Artist Name:</label>
  <input type="text" id="artist_name" name="artist[name]"><br>

  Please select the songs genres:
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
  <input type="submit" name="Create" value="Create">
</form>
